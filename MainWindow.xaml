<Window x:Class="RC_save_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RC_save_editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="860" Width="650">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="19"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Menu Grid.Row="0">
                <MenuItem Header="_File">
                    <MenuItem Header="_Load Packed" Click="Menu_LoadPacked"/>
                    <MenuItem x:Name="save_packed_button" Header="_Save Packed" Click="Menu_SavePacked" IsEnabled="False"/>
                    <Separator />
                    <MenuItem Header="_Load Json" Click="Menu_LoadJson"/>
                    <MenuItem x:Name="save_json_button" Header="_Save Json" Click="Menu_SaveJson" IsEnabled="False"/>
                    <Separator />
                    <MenuItem Header="_File testing">
                        <MenuItem Header="_dat to json" Click="Menu_ConvertDat"/>
                        <MenuItem Header="_json to dat" Click="Menu_ConvertJson"/>
                        <MenuItem Header="_test json validity" Click="Menu_TestJson"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_RC Profiles">
                    <MenuItem x:Name="profile_load"  Header="_Load Profile" IsEnabled="False">
                        <MenuItem Header="_Profile 1" Click="LoadProfile1" />
                        <MenuItem Header="_Profile 2" Click="LoadProfile2"/>
                        <MenuItem Header="_Profile 3" Click="LoadProfile3"/>
                    </MenuItem>
                    <MenuItem x:Name="profile_save"  Header="_Save Profile" IsEnabled="False">
                        <MenuItem Header="_Profile 1" Click="SaveProfile1"/>
                        <MenuItem Header="_Profile 2" Click="SaveProfile2"/>
                        <MenuItem Header="_Profile 3" Click="SaveProfile3"/>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="_Set game folder" Click="SetGamePath"/>
                    <MenuItem Header="_Auto set game folder" Click="GetGamePath"/>
                    <MenuItem Header="_Open game folder" Click="BrowseGamePath" x:Name="profiles_browse" IsEnabled="False"/>
                </MenuItem>
            </Menu>
            <Separator Grid.Row="0" Height="1" VerticalAlignment="Bottom"/>

            <StackPanel Orientation="Horizontal"  Grid.Row="1" Margin="2,1,0,0">
                <Button x:Name="engineer_page_button"    Content="Engineer"    IsEnabled="False"  Padding="4,0,4,0" Height="19" Click="NavigateToEngineer"/>
                <Button x:Name="specialists_page_button" Content="Specialists" IsEnabled="False"  Padding="4,0,4,0" Height="19" Click="NavigateToSpecialists"/>
                <Button x:Name="blueprints_page_button"  Content="Blueprints"  IsEnabled="False"  Padding="4,0,4,0" Height="19" Click="NavigateToBlueprints"/>
                <Button x:Name="drops_page_button"       Content="Drops"       IsEnabled="False"  Padding="4,0,4,0" Height="19" Click="NavigateToDrops"/>
                <Button x:Name="relics_page_button"      Content="Relics"      IsEnabled="False"  Padding="4,0,4,0" Height="19" Click="NavigateToRelics"/>
                <Button x:Name="upgrades_page_button"    Content="Upgrades"    IsEnabled="False"  Padding="4,0,4,0" Height="19" Click="NavigateToUpgrades"/>
                <Button x:Name="metadata_page_button"    Content="Metadata"    IsEnabled="False"  Padding="4,0,4,0" Height="19" Click="NavigateToMetadata"/>
                <Button x:Name="stagemap_page_button"    Content="Stagemap"    IsEnabled="False"  Padding="4,0,4,0" Height="19" Click="NavigateToStagemap"/>
            </StackPanel>

            <Border Grid.Row="2" Background="#FFE4E4E4" BorderBrush="#FF9C9C9C" BorderThickness="1" Margin="1,1,0,1">
                <Grid>
                    <!-- Console feed page-->
                    <Grid x:Name="console_page" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="An error has occurred. Navigate to another tab to continue" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <ScrollViewer Margin="2" Grid.Row="1">
                            <TextBox x:Name="console_feed" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Grid>
                    
                    <!-- Metadata field page -->
                    <Grid x:Name="metadata_page" Visibility="Collapsed">
                        <StackPanel x:Name="field_panel" Grid.Column="1" Margin="13,5,5,5" Orientation="Vertical">

                        </StackPanel>
                    </Grid>
                    <!-- ID field assign page -->
                    <Grid x:Name="id_list_page" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <GridSplitter Grid.Column="0" Width="3" Background="Transparent" HorizontalAlignment="Right"/>
                        <GridSplitter Grid.Column="1" Width="3" Background="Transparent" HorizontalAlignment="Right"/>
                    
                        <Grid Grid.Column="2" Margin="2,0,0,0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="21"/>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="80"/>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="entry_label" Text="Sample Field" VerticalAlignment="Center" FontSize="16"/>
                            <TextBlock x:Name="entry_id" Grid.Row="1" Text="Sample ID" VerticalAlignment="Center" Foreground="#FFAB0000"/>
                            <TextBlock x:Name="entry_desc" Grid.Row="2" TextWrapping="Wrap" Text="Sample Desc 12354 12321 21312 12312" Foreground="#FF4C4C4C"/>
                            <TextBlock x:Name="entry_extra" Grid.Row="3" TextWrapping="Wrap" Text="Tank, Tree, Engineer" Foreground="#FF018C10"/>
                            <Button x:Name="assign_button" Content="Assign" Padding="10,0,10,0" Grid.Row="4" HorizontalAlignment="Left" Height="19" Click="AssignSelected"/>

                            <Grid Grid.Row="5">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="24"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="1" Background="White" BorderBrush="#FF9C9C9C" BorderThickness="1" Margin="0,0,2,0" >
                                    <ListView x:Name="assigned_listview"/>
                                </Border>
                                <Button x:Name="remove_button" Content="Remove" Padding="10,0,10,0" Grid.Row="2" HorizontalAlignment="Left" Height="19" Click="RemoveSelected" />
                            </Grid>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="select_label" Text="Select [FIELD]"  FontSize="16" Margin="2,0,0,0"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="search_filter" Margin="2,2,2,2" TextChanged="SearchFilterUpdated"/>
                                <ComboBox x:Name="type_filter" Grid.Column="1" Margin="2" Width="20">
                                    <CheckBox x:Name="NoPCX_box" Content="Exclude PCX" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Spawn_box" Content="Spawn" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Harvester_box" Content="Harvester" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="FrontalAttacker_box" Content="FrontalAttacker" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="MassDestruction_box" Content="MassDestruction" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Fire_box" Content="Fire" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Sniper_box" Content="Sniper" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Supporter_box" Content="Supporter" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Rock_box" Content="Rock" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Robo_box" Content="Robo" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Spawner_box" Content="Spawner" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="PCXCard_box" Content="PCXCard" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Building_box" Content="Building" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Factory_box" Content="Factory" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Turret_box" Content="Turret" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Refinery_box" Content="Refinery" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Unit_box" Content="Unit" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Heal_box" Content="Heal" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Specialist_box" Content="Specialist" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Skill_box" Content="Skill" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Engineer_box" Content="Engineer" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Bomb_box" Content="Bomb" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Scout_box" Content="Scout" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Chest_box" Content="Chest" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Tank_box" Content="Tank" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Vehicle_box" Content="Vehicle" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Mech_box" Content="Mech" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Tree_box" Content="Tree" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Melee_box" Content="Melee" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Research_box" Content="Research" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Crystal_box" Content="Crystal" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Builder_box" Content="Builder" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="Drop_box" Content="Drop" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                </ComboBox>
                            </Grid>
                            <Border Grid.Row="2" Background="White" BorderBrush="#FF9C9C9C" BorderThickness="1" Margin="2,0,2,2" Grid.ColumnSpan="2">
                                <ListView x:Name="entries_listview" SelectionChanged="ListView_SelectionChanged"/>
                            </Border>
                        </Grid>
                        
                        <Grid x:Name="extra_id_list" Grid.Column="0" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="select_label_extra" Text="Select [FIELD]"  FontSize="16" Margin="2,0,0,0"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="search_filter_extra" Margin="2,2,2,2" TextChanged="SearchFilterUpdated"/>
                                <ComboBox Grid.Column="1" Margin="2" Width="20">
                                    <CheckBox x:Name="extra_NoPCX_box" Content="Exclude PCX" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Spawn_box" Content="Spawn" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Harvester_box" Content="Harvester" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_FrontalAttacker_box" Content="FrontalAttacker" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_MassDestruction_box" Content="MassDestruction" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Fire_box" Content="Fire" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Sniper_box" Content="Sniper" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Supporter_box" Content="Supporter" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Rock_box" Content="Rock" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Robo_box" Content="Robo" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Spawner_box" Content="Spawner" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_PCXCard_box" Content="PCXCard" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Building_box" Content="Building" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Factory_box" Content="Factory" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Turret_box" Content="Turret" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Refinery_box" Content="Refinery" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Unit_box" Content="Unit" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Heal_box" Content="Heal" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Specialist_box" Content="Specialist" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Skill_box" Content="Skill" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Engineer_box" Content="Engineer" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Bomb_box" Content="Bomb" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Scout_box" Content="Scout" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Chest_box" Content="Chest" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Tank_box" Content="Tank" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Vehicle_box" Content="Vehicle" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Mech_box" Content="Mech" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Tree_box" Content="Tree" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Melee_box" Content="Melee" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Research_box" Content="Research" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Crystal_box" Content="Crystal" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Builder_box" Content="Builder" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                    <CheckBox x:Name="extra_Drop_box" Content="Drop" Checked="FilterBoxChecked" Unchecked="FilterBoxChecked" />
                                </ComboBox>
                            </Grid>

                            <Border Grid.Row="2" Background="White" BorderBrush="#FF9C9C9C" BorderThickness="1" Margin="2,0,2,2" Grid.ColumnSpan="2">
                                <ListView x:Name="entries_listview_extra"/>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Stagemap data page-->
                    <Grid x:Name="stagemap_list_page">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">
                                <StackPanel x:Name="reward_panel" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <StackPanel Orientation="Horizontal">
                                        <Button Height="20" Width="20"/>
                                        <Button Height="20" Width="20"/>
                                        <Button Height="20" Width="20"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>

                            <Grid x:Name="tile_info_panel"  Grid.Row="0" Margin="12,2,2,2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="24"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="tile_coords_row" Grid.Column="0" Text="Row: 0, Column: 0" Grid.ColumnSpan="2" FontSize="16" />

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Is Chosen: " VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <CheckBox x:Name="tile_is_chosen"  Grid.Column="1" VerticalAlignment="Center" Checked="tile_is_chosen_Checked" Unchecked="tile_is_chosen_Unchecked"/>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Reward Type: " VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <ComboBox x:Name="tile_type_combobox"  Grid.Column="1" SelectionChanged="tile_type_combobox_SelectionChanged">
                                        <ComboBoxItem Content="None"/>
                                        <ComboBoxItem Content="Shop"/>
                                        <ComboBoxItem Content="Card"/>
                                        <ComboBoxItem Content="Upgrade"/>
                                        <ComboBoxItem Content="Relic"/>
                                        <ComboBoxItem Content="Coins"/>
                                        <ComboBoxItem Content="Start Crystals"/>
                                        <ComboBoxItem Content="Drops"/>
                                        <ComboBoxItem Content="Lives"/>
                                        <ComboBoxItem Content="Research Points"/>
                                        <ComboBoxItem Content="Research Reward"/>
                                    </ComboBox>
                                </Grid>

                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>


                                    <TextBlock Grid.Column="0" Text="Connections: " VerticalAlignment="Center" />
                                    <StackPanel Grid.Column="1" x:Name="connections_panel" Orientation="Horizontal" Margin="0,0,5,0">
                                        <ComboBox SelectedIndex="0">
                                            <ComboBoxItem Content="1"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <Button x:Name="add_connection" Content="+" Grid.Column="2" Click="add_connection_Click"/>
                                    <Button x:Name="remove_connection" Content="-" Grid.Column="3"  Click="remove_connection_Click"/>
                                </Grid>
                            </Grid>
                            <Separator Grid.Row="1" Margin="0,0,0,0" VerticalAlignment="Top"/>

                        </Grid>
                        
                        <Separator Grid.Column="1" Width="1" HorizontalAlignment="Left" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,0,0" Background="#FFA0A0A0"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition  Height="20"/>
                                <RowDefinition  Height="120"/>
                                <RowDefinition  Height="24"/>
                                <RowDefinition  Height="3"/>
                                <RowDefinition  Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="select_stage_box" Text="Select Stage (Active: -1)"  FontSize="16" Margin="2,0,0,0"/>

                            <Border Grid.Row="1" Background="White" BorderBrush="#FF9C9C9C" BorderThickness="1" Margin="2,2,2,2" >
                                <ListView x:Name="assigned_stageview" SelectionChanged="assigned_stageview_SelectionChanged"/>
                            </Border>
                            <Grid Grid.Row="2" Margin="2,0,2,0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="assign_stage_button" Content="Copy" Padding="10,0,10,0" Grid.Column="0" HorizontalAlignment="Left" Height="19" Click="CopyStage_click"/>
                                <Button x:Name="remove_stage_button" Content="Remove" Padding="10,0,10,0" Grid.Column="1" HorizontalAlignment="Left" Height="19" Click="RemoveStage_click"/>
                                <Button x:Name="current_stage_button" Content="Set Active" Padding="10,0,10,0" Grid.Column="5" HorizontalAlignment="Left" Height="19" Click="SetCurrentStage_click" />

                                <Button x:Name="up_stage_button" Content="⮝" Width="20" Grid.Column="2" HorizontalAlignment="Left" Height="19" Click="UpStage_click" />
                                <Button x:Name="down_stage_button" Content="⮟" Width="20" Grid.Column="3" HorizontalAlignment="Left" Height="19" Click="DownStage_click" />
                            </Grid>

                            <Separator Grid.Row="3" VerticalAlignment="Bottom" Margin="0,2,0,0" />
                            <ScrollViewer Grid.Row="4">
                                <Grid Margin="2,0,2,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="5,0,5,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Separator Grid.Column="0" Height="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,0,0" Background="#FFA0A0A0"/>
                                        <TextBlock Grid.Column="1" Text="Stage Config" Margin="5, 0, 5, 0" Foreground="#FFA0A0A0"/>
                                        <Separator Grid.Column="2" Height="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,0,0" Background="#FFA0A0A0"/>
                                    </Grid>
                                    <TextBlock  Grid.Row="1" Text="AI Units: " />
                                    <ComboBox   Grid.Row="1" x:Name="bossAiPrefabName" Grid.Column="1" SelectionChanged="bossAiPrefabName_SelectionChanged" />

                                    <TextBlock  Grid.Row="2" Text="Biome type: " />
                                    <ComboBox   Grid.Row="2" x:Name="bossWorldPrefabName" Grid.Column="1" SelectionChanged="bossWorldPrefabName_SelectionChanged"/>
                                    
                                    <TextBlock  Grid.Row="3" Text="Map Generator: " />
                                    <ComboBox   Grid.Row="3" x:Name="bossMapScriptableObjectName" Grid.Column="1" SelectionChanged="bossMapScriptableObjectName_SelectionChanged"/>

                                    <Grid Grid.Row="4" Grid.ColumnSpan="2" Margin="5,0,5,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Separator Grid.Column="0" Height="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,0,0" Background="#FFA0A0A0"/>
                                        <TextBlock Grid.Column="1" Text="Reward Map Dimensions" Margin="5, 0, 5, 0" Foreground="#FFA0A0A0"/>
