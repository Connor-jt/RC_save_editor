<UserControl x:Class="RC_save_editor.EditField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RC_save_editor"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800"
             Height="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="context_box" Text="Sample text" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Border x:Name="value_box_validator" Grid.Column="1" VerticalAlignment="Center" BorderBrush="Transparent" BorderThickness="1">
            <TextBox x:Name="value_box" TextChanged="value_box_TextChanged"   />
        </Border>
    </Grid>
</UserControl>
